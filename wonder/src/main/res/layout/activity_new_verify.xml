<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.wondertech.wonder.NewVerifyActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/tap_image"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/new_verify_privacy"
                android:gravity="left"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By verifying, you agree to our\nPrivacy Policy and Terms of Service."
                android:textSize="15sp"
                android:textColor="#000000"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/new_verify_send"
                android:src="@drawable/verify_with_sms_button"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/new_verify_privacy"
                android:background="@android:color/transparent"
                android:layout_marginBottom="80dp"
                />
        </RelativeLayout>

        </LinearLayout>

</FrameLayout>
