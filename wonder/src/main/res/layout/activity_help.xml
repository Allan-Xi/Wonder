<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.wondertech.wonder.HelpActivity" >

    <FrameLayout 
        	android:layout_width="match_parent"
    		android:layout_height="0dp"
        	android:layout_weight="503">
    <ImageView 
            android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:src="@drawable/help1"
    		android:background="@android:color/transparent"
    		android:scaleType="fitXY"/>
    <TextView
        	android:id="@+id/help_emoji1"
        	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_marginTop="22dp"
    		android:layout_marginLeft="10dp"
    		android:textSize="25sp"/>
    
    </FrameLayout>
    <FrameLayout 
        	android:layout_width="match_parent"
    		android:layout_height="0dp"
        	android:layout_weight="631">
    <ImageView 
            android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:src="@drawable/help2"
    		android:background="@android:color/transparent"
    		android:scaleType="fitXY"/>
    <TextView
        	android:id="@+id/help_emoji2"
        	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_marginTop="30dp"
    		android:layout_gravity="right"
    		android:layout_marginRight="31dp"
    		android:textSize="25sp"/>
    </FrameLayout>
    <Button
        android:id="@+id/help_got"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="146"
        android:text="Got it!"
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="#6a6a6a"
        android:background="@drawable/big_white_button"/>
</LinearLayout>
