<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <FrameLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content">
        <TextView 
            android:id="@+id/invite_initials"
            android:layout_width="90dp"
    		android:layout_height="90dp"
    		android:background="@drawable/profile_pic"
    		android:gravity="center"
    		android:layout_gravity="center"
    		android:textSize="30sp"/>
        <org.wondertech.wonder.RoundImageView
            android:id="@+id/invite_photo"
            android:layout_width="90dp"
    		android:layout_height="90dp"
    		android:layout_gravity="center"
    		android:background="@android:color/transparent"
            />
        <ImageView 
            android:id="@+id/invite_add"
            android:layout_width="90dp"
    		android:layout_height="90dp"
    		android:src="@drawable/add_plus"
    		android:layout_gravity="center"
    		android:background="@android:color/transparent"/>
    </FrameLayout>
    <TextView 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:id="@+id/invite_firstname"
    	android:gravity="bottom|center_horizontal"
    	android:textSize="15sp"/>
    <TextView 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:id="@+id/invite_lastname"
    	android:gravity="top|center_horizontal"
    	android:textSize="15sp" />
     <TextView 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:id="@+id/invite_phone_type"
    	android:gravity="top|center_horizontal"
		 android:textColor="#666666"
    	android:textSize="12sp"/>
    <TextView 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:id="@+id/invite_phone"
    	android:gravity="top|center_horizontal"
		android:textColor="#666666"
		android:textSize="12sp"
		android:layout_marginBottom="10dp"/>
</LinearLayout>
