<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/driver_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="150dp"
	android:orientation="horizontal">
	<RelativeLayout
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		>
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:layout_marginTop="15dp"
			android:layout_marginLeft="15dp"
			android:src="@drawable/green_doc"
			android:id="@+id/driver_dot"
			android:background="@android:color/transparent"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_alignParentBottom="true"
			android:layout_marginRight="15dp"
			android:layout_marginBottom="15dp"
			android:textSize="20sp"
			android:id="@+id/driver_car"/>
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
			android:layout_marginTop="10dp"
			android:layout_marginRight="25dp"
			android:src="@drawable/phone_icon"
			android:id="@+id/driver_phone_icon"
			android:background="@android:color/transparent"/>
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
			android:layout_marginTop="25dp"
			android:layout_marginRight="10dp"
			android:src="@drawable/small_message"
			android:id="@+id/driver_sms_icon"
			android:background="@android:color/transparent"/>
		<FrameLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true">
			<TextView
				android:id="@+id/driver_initials"
				android:layout_width="90dp"
				android:layout_height="90dp"
				android:background="@drawable/profile_pic"
				android:gravity="center"
				android:layout_gravity="center"
				android:textSize="30sp"/>
			<org.wondertech.wonder.RoundImageView
				android:id="@+id/driver_photo"
				android:layout_width="90dp"
				android:layout_height="90dp"
				android:layout_gravity="center"
				android:background="@android:color/transparent"
				/>
		</FrameLayout>
	</RelativeLayout>

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="2"
		android:orientation="vertical">
		<TextView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="2"
			android:gravity="bottom|left"
			android:id="@+id/driver_name"
			android:textSize="25sp"
			/>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:gravity="center_vertical|left"
			android:id="@+id/driver_status"
			android:textSize="17sp"
			/>
		<ImageButton
			android:layout_width="wrap_content"
			android:layout_height="0dp"
			android:layout_gravity="center_vertical|left"
			android:layout_weight="2"
			android:src="@drawable/notify_me_button"
			android:id="@+id/driver_notify"
			android:background="@android:color/transparent"/>
	</LinearLayout>
      
</LinearLayout>


