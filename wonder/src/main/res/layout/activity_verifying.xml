<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_centerHorizontal="true"
            android:id="@+id/verifying_status"
            android:layout_above="@+id/verifying_circles"
            android:layout_marginBottom="80dp"
            android:text="Verifying"
            android:textSize="25sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/verifying_status"
            android:layout_alignTop="@+id/verifying_status"
            android:id="@+id/verifying_dot"
            android:textSize="25sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/verifying_circles"
            android:layout_centerInParent="true"
            android:src="@drawable/dot_ring"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:background="@android:color/transparent"
        android:layout_gravity="center"
        android:src="@drawable/verifying_logo_red"
        android:layout_marginBottom="80dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:background="@android:color/transparent"
        android:layout_gravity="center"
        android:src="@drawable/verifying_logo_green"
        />
</FrameLayout>