<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.wondertech.wonder.CallActivity"
    android:orientation="vertical" >

    <RelativeLayout 
	    android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="505">
	<org.wondertech.wonder.RoundImageView
	    android:id="@+id/call_pic"
        android:layout_width="257dp"
        android:layout_height="257dp"
		android:layout_centerInParent="true"
        android:scaleType="centerInside"
        imagecontrol:border_inside_color="#6cbfff"
        imagecontrol:border_outside_color="#ffffff"
        imagecontrol:border_thickness="2dp" 
        android:src="@drawable/profile_circle"/>
	</RelativeLayout>
    <LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="0dp"
	    	android:layout_weight="64"
	    	android:orientation="horizontal">	    
		    <TextView 
		        android:id="@+id/call_name"
		        android:layout_marginLeft="20dp"
			    android:layout_width="0dp"
			    android:layout_weight="3"
			    android:layout_height="match_parent"
			    android:gravity="center_vertical"
			    android:textSize="20sp"
			    android:textStyle="bold"/>
		    <TextView 
		        android:id="@+id/call_time"
			    android:layout_width="0dp"
			    android:layout_weight="2"
			    android:layout_height="match_parent"
			    android:gravity="center_vertical"
			    android:textColor="#919191"
			    android:textSize="11sp"/>    
	 </LinearLayout>
	<TextView 
		        android:id="@+id/call_message"
			    android:layout_width="match_parent"			 
			    android:layout_height="0dp"
			    android:layout_weight="147"
			    android:gravity="center"
			    android:textSize="15sp"
			    android:singleLine="true"
			    android:ellipsize="end"/>
	<RelativeLayout
	    android:id="@+id/call_buttons"
		android:layout_width="match_parent"
		android:layout_weight="404"
		android:layout_height="0dp">
		<ImageButton 
		    android:id="@+id/call_call"
		    android:layout_width="60dp"			 
			android:layout_height="60dp"
			android:src ="@drawable/free_call_and_message_normal_call"
			android:scaleType="centerInside"
			android:background="@android:color/transparent"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="20dp"
			android:layout_centerVertical="true"/>
		<ImageButton 
		    android:id="@+id/call_message_message"
		    android:layout_width="60dp"			 
			android:layout_height="60dp"
			android:src ="@drawable/free_call_and_message_message"
			android:scaleType="centerInside"
			android:background="@android:color/transparent"
			android:layout_alignParentRight="true"
			android:layout_marginRight="20dp"
			android:layout_centerVertical="true"/>	
		<ImageButton 
		    android:id="@+id/call_free_call"
		    android:layout_width="100dp"			 
			android:layout_height="100dp"
			android:src ="@drawable/free_call_and_message_free_call"
			android:scaleType="centerInside"
			android:background="@android:color/transparent"
			android:layout_centerInParent="true"/>
	</RelativeLayout>	    
</LinearLayout>
