<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
     >
    <ImageView
        android:id="@+id/question_content"
        android:layout_width="240dp"
    	android:layout_height="163dp"
    	android:layout_gravity="bottom|center_horizontal"
    	android:scaleType="centerInside"
    	android:layout_marginBottom="32dp"
    	android:background="@android:color/transparent"
    	android:src="@drawable/question_box"/>
    <LinearLayout
        android:id="@+id/question_buttons"
        android:layout_width="240dp"
    	android:layout_height="163dp"
    	android:layout_gravity="bottom|center_horizontal"
    	android:layout_marginBottom="32dp"
    	android:orientation="vertical">
    	<TextView
    	    android:paddingLeft="5dp"
    	    android:paddingRight="5dp"
    	    android:id="@+id/question_text"
    	    android:layout_width="match_parent"
	    	android:layout_height="0dp"
	    	android:layout_weight="205"
	    	android:textSize="19sp"
	    	android:gravity="center"
	    	android:textColor="#6f6f6f"
	    	android:minLines="2"
    	    />
    	<LinearLayout
	        android:layout_width="match_parent"
	    	android:layout_height="0dp"
	    	android:layout_weight="120"
	    	android:orientation="horizontal">
        <ImageButton
            android:id="@+id/question_cross"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
    		android:layout_gravity="top|center_horizontal"
    		android:scaleType="centerInside"
            android:background="@android:color/transparent"
            android:src="@drawable/main_cross_button"/>
        <ImageButton
            android:id="@+id/question_check"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
    		android:layout_gravity="top|center_horizontal"
    		android:scaleType="centerInside"
            android:background="@android:color/transparent"
            android:src="@drawable/main_check_button"/>
        </LinearLayout>
    </LinearLayout>
    <ImageButton 
    	    android:id="@+id/question_invite"
    	    android:layout_width="238dp"
	    	android:layout_height="63dp"
	    	android:layout_gravity="bottom|center_horizontal"
	    	android:layout_marginBottom="30dp"
	    	android:scaleType="centerInside"
	    	android:visibility="gone"
	    	android:background="@android:color/transparent"
	    	android:src="@drawable/invite_button"/>
	<ImageButton
    	    android:id="@+id/driver_help"
    	    android:layout_width="22.5dp"
	    	android:layout_height="22.5dp"
	    	android:layout_gravity="bottom|right"
	    	android:layout_marginBottom="6.5dp"
	    	android:layout_marginRight="6.5dp"
	    	android:scaleType="centerInside"
	    	android:background="@android:color/transparent"
	    	android:src="@drawable/help_button"/>
</FrameLayout>
