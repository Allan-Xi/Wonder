<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#6cbfff"
    tools:context="org.wondertech.wonder.VOIPActivity" >
	<RelativeLayout 
	    android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="640">
	<org.wondertech.wonder.RoundImageView
	    android:id="@+id/voip_pic"
        android:layout_width="157dp"
        android:layout_height="157dp"
		android:layout_centerInParent="true"
        android:scaleType="centerInside"
        imagecontrol:border_inside_color="#6cbfff"
        imagecontrol:border_outside_color="#ffffff"
        imagecontrol:border_thickness="2dp" 
        android:src="@drawable/profile_circle"/>
	</RelativeLayout>
    <TextView 
        android:id="@+id/voip_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="139"
        android:gravity="top|center_horizontal"
    	android:textSize="35sp"
    	android:textColor="#ffffff"/>   
        <TextView 
            android:id="@+id/voip_ring"
            android:layout_width="match_parent"
            android:layout_height="0dp"
        android:layout_weight="289"
        android:gravity="top|center_horizontal"
    	android:textSize="22sp"
    	android:textColor="#f9f8f8"
    	android:textStyle="italic"
    		/>
    <FrameLayout 
        android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="214"
    	android:background="#ffffff">
        <ImageButton
		        android:id="@+id/voip_end_call"
		        android:layout_width="match_parent"
    			android:layout_height="match_parent"
		        android:background="@android:color/transparent"
		        android:src="@drawable/free_call_ebd_call_button"
		        android:scaleType="centerInside"
		        android:visibility="gone"
		         />
     	<LinearLayout 
     	    android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:id="@+id/voip_buttons"
    		android:orientation="horizontal"
    		>
    		<ImageButton
		        android:id="@+id/voip_accept"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="wrap_content"
		        android:background="@android:color/transparent"
		        android:src="@drawable/free_call_accept_button"
		        android:scaleType="centerInside"
		        android:layout_gravity="center_vertical"
		         />
     	    <ImageButton
		        android:id="@+id/voip_hang_up"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="wrap_content"
		        android:background="@android:color/transparent"
		        android:src="@drawable/free_call_cancel_button"
		        android:scaleType="centerInside"
		        android:layout_gravity="center_vertical"
		        />
     	</LinearLayout>   
    </FrameLayout>
    

</LinearLayout>
