<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.wondertech.wonder.ProtectDriver"
    android:background="#2d2d2d">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How You Protect Drivers"
        android:id="@+id/protect_id"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/protect_layout"
        android:layout_below="@+id/protect_id"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha = "0"
            android:id="@+id/protect_phone"
            android:background="@android:color/transparent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/protect_phone"
            />
        <ImageView
            android:layout_centerVertical="true"
            android:alpha = "0"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/protect_logo"
            android:background="@android:color/transparent"
            android:src="@drawable/protect_wonder_logo"
            />
        <ImageView
            android:layout_alignLeft="@+id/protect_logo"
            android:layout_below="@+id/protect_logo"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="60dp"
            android:alpha = "0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/protect_arrow"
            android:background="@android:color/transparent"
            android:src="@drawable/protect_down_arrow"
            />
        </RelativeLayout>
        <ImageView
            android:alpha = "0"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/protect_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/protect_notification"
            android:background="@android:color/transparent"
            android:src="@drawable/protect_notification"
        />

        <ImageButton
            android:alpha = "0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/protect_ok"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent"
            android:src="@drawable/protect_okay_button"/>

</RelativeLayout>
